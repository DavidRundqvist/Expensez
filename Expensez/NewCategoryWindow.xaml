<Window x:Class="Expensez.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expensez"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        
        Title="New category..." Height="Auto" Width="400" SizeToContent="Height">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=_categoryName}">
        <TextBox x:Name="_categoryName" Margin="10"></TextBox>
        <StackPanel Margin="10,0,10,0" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Click="OnOK" IsDefault="True">OK</Button>
            <Button Click="OnCancel" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
